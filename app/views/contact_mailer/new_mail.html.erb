<h2>お問い合わせ</h2>

<%= form_with model: nil, url: send_mail_articles_path, local: true do |f| %>
  <div class="field">お名前<br><%= f.text_field :name %></div>
  <div class="field">メールアドレス<br><%= f.email_field :email %></div>
  <div class="field">お問い合わせ内容<br><%= f.text_area :body %></div>
  <div class="actions"><%= f.submit "送信" %></div>
<% end %>